{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true,
    "esModuleInterop": true,

    "outDir": "./result/tsc",
    "baseUrl": ".",
    "paths": {
      "@models/*": ["src/models/*"],
      "@repositories/*": ["src/repositories/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],

      "@models": ["src/models"],
      "@repositories": ["src/repositories"],
      "@routes": ["src/routes"],
      "@services": ["src/services"],
      "@utils": ["src/utils"]
    }
  },

  "include": ["src/**/*"]
}
